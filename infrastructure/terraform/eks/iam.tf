# EKS IAM Configuration
# Story: 0-3 Kubernetes Cluster Provisioning
# AC: 6 - Cluster autoscaler (IRSA)
# AC: 8 - Ingress controller (ALB controller IRSA)

# =============================================================================
# EKS Cluster IAM Role (Task 1.1)
# Note: Replaces the QualisysEKSService role from Story 0.1 with EKS-specific
# trust policy. Story 0.1 created a generic service role; this provides the
# exact role the EKS cluster resource references.
# =============================================================================

resource "aws_iam_role" "eks_service" {
  name        = "${var.project_name}-eks-cluster"
  description = "IAM role for EKS cluster control plane"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "eks.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })

  tags = {
    Name = "${var.project_name}-eks-cluster-role"
  }
}

resource "aws_iam_role_policy_attachment" "eks_cluster_policy" {
  role       = aws_iam_role.eks_service.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSClusterPolicy"
}

resource "aws_iam_role_policy_attachment" "eks_vpc_resource_controller" {
  role       = aws_iam_role.eks_service.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSVPCResourceController"
}

